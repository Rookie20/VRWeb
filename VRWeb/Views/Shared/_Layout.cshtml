<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title - VIRTUAL REALITY</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://aframe.io/releases/0.7.0/aframe.min.js"></script>
    <script src="~/VRSetup/dist/aframe-environment-component.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            @Html.ActionLink("Virtual Reality", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu"
                    aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle Navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse"></div>
            <div class="collapse navbar-collapse" style="margin-right: 2%" id="navbarMenu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("VR Demo", "PolygonShredder", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Services", "OculusQuestService", "Home", "", new { @class = "nav-link" })
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Create your game", "VRGameDemo", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"> Manage </a>
                            <div class="dropdown-menu">
                                @Html.ActionLink("Paketat", "Index", "PaketaInfoes", "", new { @class = "dropdown-item" })
                                @Html.ActionLink("Kontaktet", "Index", "FaqeKontakt", "", new { @class = "dropdown-item" })

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Perdoruesit", "Index", "Administrimi", "", new { @class = "dropdown-item" })
                                }
                            </div>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>
    <div class="body-content">
        <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
        @RenderBody()
        <footer>
            <div class="section-footer text-center bg-light p-2">
                <div class="d-flex justify-content-center">
                   
                    <div class="social col-4">
                        
                        <div class="d-flex flex-row justify-content-center pt-4">
                            <i class="fab fa-facebook m-2"></i>
                            <i class="fab fa-twitter m-2"></i>
                            <i class="fab fa-instagram m-2"></i>
                            <i class="fab fa-youtube m-2"></i>
                            <i class="fab fa-twitch m-2"></i>
                        </div>
                    </div>
                </div>
                <hr />
                <h5 class="font-weight-bold">&copy; @DateTime.Now.Year - VR Web</h5>
            </div>
        </footer>
    </div>


    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script>
        window.sr = ScrollReveal({ duration: 1000 });
        sr.reveal('.site-content .d-flex');
        sr.reveal('.section-1 .card');
        sr.reveal('.section-2 .d-flex');
        sr.reveal('.section-3 .col-md-4');
        sr.reveal('.section-4 .col-md-7, .col-md-5');
    </script>

    <script type="text/javascript">
        var mybutton = document.getElementById("myBtn");
        window.onscroll = function () {
            scrollFunction()
        };
        function scrollFunction() {
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }

    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
